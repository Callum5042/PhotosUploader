@model PhotosUploader.ViewModels.People.CreatePersonModel

<h1>Add Person</h1>

<form asp-controller="People" asp-action="Create" enctype="multipart/form-data">

    <div class="row">

        <div class="form-group col-md-6">

            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName"></span>

        </div>

        <div class="form-group col-md-6">

            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />

        </div>

        <div class="form-group col-md-6">

            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" class="form-control" />

        </div>

        <div class="form-group col-md-6">

            <label>Files</label>
            <div class="custom-file">
                <input asp-for="Files" class="custom-file-input">
                <label asp-for="Files" class="custom-file-label">Choose file</label>
            </div>

        </div>

    </div>

    <button type="submit" class="btn btn-primary">Add Person</button>

</form>