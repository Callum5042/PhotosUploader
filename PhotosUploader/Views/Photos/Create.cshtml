@model PhotosUploader.ViewModels.Photos.CreatePhotoModel

<h1>Add Photos</h1>

<form asp-controller="Photos" asp-action="Create" enctype="multipart/form-data">

    <div class="row">

        <div class="form-group col-md-12">

            @*<input asp-for="Files" data-roveuploader>*@

            <div data-roveuploader>

                <input name="Photos[0].File" type="file">
                <input name="Photos[0].Size" data-photoupload-size>

            </div>

        </div>

    </div>

    <button type="submit" class="btn btn-primary">Update Photos</button>
    <button type="button" class="btn btn-secondary">Upload Ajax</button>

</form>